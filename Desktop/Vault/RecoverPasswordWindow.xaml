<Window x:Class="Vault.RecoverPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vault"
        mc:Ignorable="d"
        Title="RecoverPasswordWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="RecoveryCodeTextBox" HorizontalAlignment="Left" Height="29" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="595" AcceptsReturn="True" FontSize="14"/>
        <TextBox IsReadOnly="True" x:Name="RecoveryCodePassword" HorizontalAlignment="Left" Height="29" Margin="10,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="595" AcceptsReturn="True" FontSize="14"/>
        <Button x:Name="GetPassword" Content="Get passowrd" HorizontalAlignment="Left" Margin="482,91,0,0" VerticalAlignment="Top" Width="123" Click="GetPassword_Click"/>
    </Grid>
</Window>
